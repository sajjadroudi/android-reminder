<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="keyText"
            type="String" />

        <variable
            name="valueText"
            type="String" />
        
        <variable
            name="icon"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout style="@style/TaskDetailsKeyContainerStyle">

            <com.mobiliha.eventsbadesaba.ui.custom.FontIcon
                style="@style/TaskDetailsIconStyle"
                android:text="@{icon}" />

            <TextView
                style="@style/TaskDetailsKeyStyle"
                android:text="@{keyText}" />

        </LinearLayout>

        <TextView
            style="@style/TaskDetailsValueStyle"
            android:text="@{valueText}" />

    </LinearLayout>
</layout>