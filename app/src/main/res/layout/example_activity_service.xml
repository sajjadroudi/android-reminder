<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".example.service.ExampleServiceActivity"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_random_int"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random Integer"/>

    <Button
        android:id="@+id/btn_play_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play random music"/>

    <Button
        android:id="@+id/btn_show_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show notification"/>

    <Button
        android:id="@+id/btn_hide_notificaiton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hide notification"/>

</LinearLayout>