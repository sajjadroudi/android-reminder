<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.mobiliha.eventsbadesaba">

    <data>
        <import type="com.mobiliha.eventsbadesaba.util.TimeUtils"/>
        <import type="com.mobiliha.eventsbadesaba.util.Utils"/>
        <import type="com.mobiliha.eventsbadesaba.data.local.db.entity.TaskColor"/>
        <variable
            name="viewModel"
            type="com.mobiliha.eventsbadesaba.ui.modify.ModifyViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.modify.ModifyFragment"
        android:padding="24dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/title"
            android:hint="@string/title"
            android:text="@={viewModel.title}"/>

        <LinearLayout
            android:id="@+id/date_time_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_date"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                tools:text="@string/date"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:hint="@string/date"
                android:text="@{TimeUtils.extractPersianDate(viewModel.date)}"/>
            <TextView
                android:id="@+id/txt_time"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                tools:text="@string/time"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:hint="@string/time"
                android:text="@{TimeUtils.extractTime(viewModel.time)}"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_occasion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="19sp"
            tools:text="@string/occasion"
            android:hint="@string/occasion"
            android:text="@{Utils.toLocaleString(viewModel.occasion)}"/>

        <EditText
            android:id="@+id/edt_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/link"
            android:hint="@string/link"
            android:text="@={viewModel.link}"/>

        <EditText
            android:id="@+id/edt_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:ems="10"
            android:gravity="right|top"
            android:inputType="textMultiLine"
            tools:text="@string/description"
            android:hint="@string/description"
            android:text="@={viewModel.desc}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.mobiliha.eventsbadesaba.ui.custom.ColoredCircle
                android:id="@+id/blue_circle"
                custom:circleColor="@{TaskColor.BLUE.colorCode}"
                custom:circleChosen="@{viewModel.color.colorCode == TaskColor.BLUE.colorCode}"
                style="@style/ColoredCircleStyle"/>

            <com.mobiliha.eventsbadesaba.ui.custom.ColoredCircle
                android:id="@+id/yellow_circle"
                custom:circleColor="@{TaskColor.YELLOW.colorCode}"
                custom:circleChosen="@{viewModel.color.colorCode == TaskColor.YELLOW.colorCode}"
                style="@style/ColoredCircleStyle"/>

            <com.mobiliha.eventsbadesaba.ui.custom.ColoredCircle
                android:id="@+id/green_circle"
                custom:circleColor="@{TaskColor.GREEN.colorCode}"
                custom:circleChosen="@{viewModel.color.colorCode == TaskColor.GREEN.colorCode}"
                style="@style/ColoredCircleStyle"/>

            <com.mobiliha.eventsbadesaba.ui.custom.ColoredCircle
                android:id="@+id/red_circle"
                custom:circleColor="@{TaskColor.RED.colorCode}"
                custom:circleChosen="@{viewModel.color.colorCode == TaskColor.RED.colorCode}"
                style="@style/ColoredCircleStyle"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:layout_margin="4dp"/>

        </LinearLayout>

    </LinearLayout>
</layout>