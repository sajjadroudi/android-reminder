<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true"  android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#8A8A8A" />
            <corners android:radius="@dimen/custom_view_radius_corner" />
            <padding
                android:bottom="@dimen/custom_view_margin_padding"
                android:left="@dimen/custom_view_margin_padding"
                android:top="@dimen/custom_view_margin_padding"
                android:right="@dimen/custom_view_margin_padding"/>
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/custom_view_background" />
            <corners android:radius="@dimen/custom_view_radius_corner" />
            <padding
                android:bottom="@dimen/custom_view_margin_padding"
                android:left="@dimen/custom_view_margin_padding"
                android:top="@dimen/custom_view_margin_padding"
                android:right="@dimen/custom_view_margin_padding"/>
        </shape>
    </item>

</selector>
