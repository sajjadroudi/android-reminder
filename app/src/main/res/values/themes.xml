<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EventsBadeSaba" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Apply custom font to the entire app -->
        <item name="android:fontFamily">@font/iransans_fa</item>
        <item name="fontFamily">@font/iransans_fa</item>
    </style>

    <style name="TaskModifyFieldIcon">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/task_modify_field_icon_width</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/task_modify_field_icon_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TaskModifyCrossIconStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/task_modify_cross_icon_text_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/icon_circle_xmark</item>
        <item name="android:layout_marginRight">@dimen/task_modify_cross_icon_margin_right</item>
    </style>

    <style name="TaskModifyAdditionalInformationTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/task_modify_additional_information_text_view_text_size</item>
        <item name="android:background">@drawable/task_modify_text_view_background</item>
        <item name="android:layout_marginLeft">@dimen/task_modify_additional_information_text_view_margin_left</item>
    </style>

    <style name="RightJustifyTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:layoutDirection" tools:targetApi="jelly_bean_mr1">rtl</item>
    </style>

    <style name="TaskDetailsRowContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">@dimen/task_details_row_container_margin_bottom</item>
        <item name="android:baselineAligned">true</item>
    </style>

    <style name="TaskDetailsKeyContainerStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.45</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TaskDetailsValueContainerStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.55</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TaskDetailsIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/task_details_icon_margin_left</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/task_details_icon_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TaskDetailsKeyStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/hint</item>
        <item name="android:textSize">@dimen/task_details_key_text_size</item>
    </style>

    <style name="TaskDetailsValueStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.55</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/task_details_value_text_size</item>
    </style>

    <style name="TaskDetailsActionContainerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/task_details_action_container_padding</item>
    </style>

    <style name="TaskDetailsActionIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/task_details_action_icon_text_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/task_details_action_icon_margin_bottom</item>
    </style>

    <style name="TaskDetailsActionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/task_details_action_text_size</item>
    </style>

    <style name="TaskModifyColorRadioButtonStyle">
        <item name="android:layout_width">@dimen/task_modify_colored_radio_button_width_height</item>
        <item name="android:layout_height">@dimen/task_modify_colored_radio_button_width_height</item>
        <item name="android:button">@null</item>
        <item name="buttonCompat">@null</item>
        <item name="android:layout_marginRight">@dimen/task_modify_colored_radio_button_margin_left_right</item>
        <item name="android:layout_marginLeft">@dimen/task_modify_colored_radio_button_margin_left_right</item>
    </style>

</resources>